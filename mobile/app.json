{
  "expo": {
    "name": "Telemedicine Queue",
    "slug": "telemedicine-queue",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.telemedicinequeue",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture prescription photos and for video consultations.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for video consultations.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload medical documents.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby clinics.",
        "NSFaceIDUsageDescription": "This app uses Face ID for quick and secure login."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "package": "com.yourcompany.telemedicinequeue",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "telemedicine",
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-camera",
      "expo-av",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2563EB"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
